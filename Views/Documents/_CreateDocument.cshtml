@model CodeTheCloud.ViewModels.DocumentViewModel

@{
    Layout = null;
}

@using (Html.BeginForm("UploadDocument", "Documents", null, FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    <h4>Upload a new document</h4>
    <div>
        Enter the description for the document and then choose the file. When you click on the Upload button this document will appear in a row above. You can then add another document.
    </div>
    <div>
        <br />
    </div>
    <div class="form-group row">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            <div class="help-tip">
                <p>
                    Please state what the content of the document is. Example would be ID, passport, CV, work permit, qualification, etc.
                </p>
            </div>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.FormFile, htmlAttributes: new { @class = "col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.FormFile, new { type = "file", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FormFile)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.HiddenFor(model => model.FilePath)
            @Html.HiddenFor(model => model.ApplicantId)
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.Id, new { @Value = 0, @class = "form-control", @readonly = "readonly" })
            @Html.HiddenFor(model => model.UploadDate, new { @Value = DateTime.Now.ToString(), @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" id="btnUpload" />
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <script>
        $(function () {
            $("#btnUpload").click(function () {
                var fileInput = document.getElementById('Document_FormFile');
                var filePath = fileInput.value;
                var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.pdf)$/i;
                if (!allowedExtensions.exec(filePath)) {
                    alert('Please upload file having extensions .jpeg/.jpg/.png/.pdf only.');
                    fileInput.value = '';
                    return false;
                }
                var files = $('#Document_FormFile')[0].files;
                for (var i = 0; i < files.length; i++) {
                    if (files[i].size > 5242880) {
                        alert("file size is more than 5MB");
                        return false;
                    }
                }
            });
        });
    </script>

}
